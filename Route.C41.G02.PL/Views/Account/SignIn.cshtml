@model SignInViewModel
@{
    ViewData["Title"] = "SignIn";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<h1>SignIn</h1>

<div class="main-agileinfo">
	<div class="agileits-top">

		<div asp-validation-summary="ModelOnly"></div>

		<form asp-action="SignIn" method="post">

			<input class="text email" asp-for="Email" placeholder="Email" required="">
			<input class="text hamda" asp-for="Password" placeholder="Password" required="">
			
			<div class="wthree-text">
				<label class="anim">
					<input type="checkbox" asp-for="RemeberMe" class="checkbox" >
					<span>Remember Me ?</span>
				</label>
				<div class="clear"> </div>
			</div>
			<input type="submit" value="SIGNIN">
		</form>
		<p> You don't have an Account? <a asp-action="Signup"> Register Now!</a></p>
	</div>
</div>

@section ValidationScriptsSection {
	<partial name="_ValidationScriptsPartial" />
}
